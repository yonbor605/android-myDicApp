<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- 主页底部导航 -->
    <style name="AppBottomMenuImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="AppBottomMenuTextN">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppBottomMenuTextP">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/actionbar_bg</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--RxTickerView-->
    <style name="TickerTextAppearance">
        <item name="android:textColor">@color/white_f0f0f0</item>
        <item name="android:textSize">50sp</item>
    </style>

    <!--健康资讯tabLayout-->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMinWidth">150dp</item>-->
        <item name="tabIndicatorColor">@color/actionbar_bg</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/actionbar_bg</item>
    </style>

    <!--WanAndroid-项目的tabLayout-->
    <style name="WanAndroidTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/actionbar_bg</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/actionbar_bg</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--公共的横线-->
    <style name="divider2bg_line_06dp_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0_6</item>
        <item name="android:background">@color/divider2bg</item>
    </style>


</resources>
